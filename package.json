{
  "name": "overman",
  "version": "0.15.1",
  "description": "Test runner for integration tests",
  "main": "dist/overman.js",
  "types": "dist/overman.d.ts",
  "files": [
    "dist",
    "!dist/tsconfig.tsbuildinfo"
  ],
  "scripts": {
    "lint": "eslint test src",
    "build": "tsc -b src",
    "build:test": "npm run build && tsc -b test",
    "test:mocha": "npm run build && npm run lint && mocha -r ts-node/register --timeout 5000 --slow 1000 --colors test/test_*",
    "test:overman": "npm run build:test && node test.js",
    "test": "npm run test:mocha"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pereckerdal/overman.git"
  },
  "keywords": [
    "test",
    "runner",
    "integration",
    "parallel"
  ],
  "author": "Per Eckerdal <per.eckerdal@gmail.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "async": "~1.5.2",
    "chalk": "~1.1.3",
    "co": "~4.6.0",
    "exit": "~0.1.2",
    "is-running": "~2.1.0",
    "lodash": ">=4.17.11",
    "ps-tree": "^1.1.0",
    "teamcity-service-messages": "~0.1.7",
    "through": "~2.3.8"
  },
  "devDependencies": {
    "@types/node": "^14.6.2",
    "chai": "~3.5.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.7.0",
    "istanbul": "~0.4.3",
    "mocha": "~2.4.5",
    "recursive-readdir": "~2.0.0",
    "source-map-support": "^0.5.13",
    "strip-ansi": "~3.0.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es2020": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "ignorePatterns": "test/suite/suite_syntax_error.js",
    "rules": {
      "no-regex-spaces": 0
    },
    "overrides": [
      {
        "files": [
          "test/**"
        ],
        "env": {
          "mocha": true
        },
        "rules": {
          "no-control-regex": 0,
          "no-empty": 0,
          "no-undef": 0,
          "no-unused-vars": 0,
          "no-useless-escape": 0
        }
      }
    ]
  }
}
