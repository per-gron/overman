{
  "name": "overman",
  "version": "0.15.1",
  "description": "Test runner for integration tests",
  "main": "dist/overman.js",
  "types": "dist/overman.d.ts",
  "files": [
    "dist",
    "!dist/tsconfig.tsbuildinfo"
  ],
  "scripts": {
    "lint": "eslint test src",
    "build": "tsc -b src",
    "build:test": "npm run build && tsc -b test",
    "test:mocha": "npm run build && npm run lint && mocha -r ts-node/register --timeout 5000 --slow 1000 --colors test/test_*",
    "test:overman": "npm run build:test && node test.js",
    "test": "npm run test:mocha"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pereckerdal/overman.git"
  },
  "keywords": [
    "test",
    "runner",
    "integration",
    "parallel"
  ],
  "author": "Per Eckerdal <per.eckerdal@gmail.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "async": "^3.2.4",
    "chalk": "^4.1.2",
    "co": "~4.6.0",
    "exit": "~0.1.2",
    "is-running": "~2.1.0",
    "lodash": ">=4.17.11",
    "ps-tree": "^1.2.0",
    "teamcity-service-messages": "^0.1.14",
    "through": "~2.3.8"
  },
  "devDependencies": {
    "@types/async": "^3.2.18",
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/exit": "^0.1.31",
    "@types/is-running": "^2.1.0",
    "@types/node": "^18.14.6",
    "@types/ps-tree": "^1.1.2",
    "@types/recursive-readdir": "^2.2.1",
    "@types/source-map-support": "^0.5.6",
    "@types/through": "^0.0.30",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.36.0",
    "istanbul": "~0.4.3",
    "mocha": "~2.4.5",
    "recursive-readdir": "^2.2.3",
    "source-map-support": "^0.5.21",
    "strip-ansi": "^6.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es2020": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "ignorePatterns": "test/suite/suite_syntax_error.js",
    "rules": {
      "no-regex-spaces": 0
    },
    "overrides": [
      {
        "files": [
          "test/**"
        ],
        "env": {
          "mocha": true
        },
        "rules": {
          "no-control-regex": 0,
          "no-empty": 0,
          "no-undef": 0,
          "no-unused-vars": 0,
          "no-useless-escape": 0
        }
      }
    ]
  }
}
